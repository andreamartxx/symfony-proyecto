{# templates/login/index.html.twig #}

{% extends 'base.html.twig' %}

{% block stylesheets %}
            <link href="/css/form.css" rel="stylesheet" />
{% endblock %}

{% block body %}

    {% if error %}

        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>

    {% endif %}
        <div class="container">
                <form action="{{ path('login') }}" method="post" id="formCalculo">
                    <div class="form-outline mb-4">
                        <label for="username" class="form-label" for="form4Example1">Email:</label>
                    <input type="email" id="username" class="form-control" name="_username" value="{{ last_username }}"/>
                    </div>
                    <div class="form-outline mb-4">
                        <label for="password" class="form-label" for="form4Example2">Password:</label>
                        <input type="password" id="password" class="form-control" name="_password"/>
                    </div>
                    {# If you want to control the URL the user is redirected to on success
                    <input type="hidden" name="_target_path" value="/account"/> #}
                    <button type="submit" class="btn">login</button>
                </form>
            </div>
        </div>
{% endblock %}